/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Nextflow config file for running minimal tests
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Defines input files and everything required to run a fast and simple pipeline test.

    Use as follows:
        nextflow run cmatkhan/homer_peakcalling_from_bam -profile test,<docker/singularity> --outdir <OUTDIR>

----------------------------------------------------------------------------------------
*/

process {

    withName: 'SAMTOOLS_VIEW' {
        ext.prefix = { "${meta.id}_filtered" } 
        ext.args = [
            "-F 1024",
            "-q 10"
        ].join(' ')
    }

    withName: '.*:HOMER_MAKETAGDIRECTORY_CNTRL' {
        ext.prefix = "realControl"
    }

    withName: '.*:HOMER_.*MAKETAGDIRECTORY.*' {
        ext.args = [
        '-checkGC',
        '-tbp 1'         // Treat as single base (5' end)
    ].join(' ')
        
    }
// '-size 100',        // Peak size (ChExMix uses variable, 100bp is reasonable start)
// default is auto and it is inferred from MAKETAGDIRECTORY
    withName: '.*:HOMER_*FINDPEAKS.*' {
        ext.args = [
            '-minDist 50',      // Minimum distance between peaks
            '-fragLength 1',    // Match tag directory setting
            '-L 1.5',           // Fold enrichment threshold (2-fold = 1.5-fold in different scale)
            '-LP 0.001',        // Local poisson pvalue loosened from default of 0.0001
            '-P 0.1',           // P-value threshold (Rossi 2021 was 0.01, resulted in union 500 enriched promoters in Taf)
            '-localSize 1000',  // Local background size (matches ChExMix scalewin)
            '-fdr 0.05'         // FDR threshold (Benjamini-Hochberg correction)
        ].join(' ')

    }
}

