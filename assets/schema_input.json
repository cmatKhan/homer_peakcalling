{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://raw.githubusercontent.com/cmatkhan/homer_peakcalling_from_bam/master/assets/schema_input.json",
    "title": "cmatkhan/homer_peakcalling_from_bam pipeline - params.input schema",
    "description": "Schema for the file provided with params.input",
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "sample": {
                "type": "string",
                "pattern": "^\\S+$",
                "errorMessage": "Sample name must be provided and cannot contain spaces",
                "meta": ["id"]
            },
            "bam": {
                "type": "string",
                "format": "file-path",
                "exists": true,
                "pattern": "^([\\S\\s]*\\/)?[^\\s\\/]+\\.bam$",
                "errorMessage": "path to a bam file"
            }
        },
        "required": ["sample", "bam"]
    }
}
